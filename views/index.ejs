<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contacts Manager</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="container">
        <h1>User Management</h1>
        <table>
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Phone</th>
                    <th>Zip Code</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(user => { %>
                    <tr>
                        <td><%= user.firstName %></td>
                        <td><%= user.lastName %></td>
                        <td><%= user.phone %></td>
                        <td><%= user.zip %></td>
                        <td class="actions">
                            <button class="btn btn-update" title="Update user">
                                <i class="fas fa-edit"></i>
                            </button>
                           
                               <div class="btn btn-delete" title="Delete user">
                                <form action="/delete/<%= user.id %>" method="POST">
                                  <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" style="background-color: transparent; border: none; cursor: pointer;">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                               </div>
                           <!-- <a href="/delete/:id" class="btn btn-delete" title="Delete user"><i class="fas fa-trash-alt"></i></a> -->
                               
                            
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>


    <div>
        <nav>
          <ul style="list-style: none; display: flex; gap: 10px;">
            <!-- Previous Page -->
            <% if (currentPage > 1) { %>
              <li><a href="?page=<%= currentPage - 1 %>&size=<%= pageSize %>">Previous</a></li>
            <% } else { %>
              <li style="color: gray;">Previous</li>
            <% } %>
    
            <!-- Page Numbers -->
            <% for (let i = 1; i <= totalPages; i++) { %>
              <% if (i === currentPage) { %>
                <li><strong><%= i %></strong></li>
              <% } else { %>
                <li><a href="?page=<%= i %>&size=<%= pageSize %>"><%= i %></a></li>
              <% } %>
            <% } %>
    
            <!-- Next Page -->
            <% if (currentPage < totalPages) { %>
              <li><a href="?page=<%= currentPage + 1 %>&size=<%= pageSize %>">Next</a></li>
            <% } else { %>
              <li style="color: gray;">Next</li>
            <% } %>
          </ul>
        </nav>
      </div>
</body>
</html> 